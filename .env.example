# Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Admin (optional). If set, only this user can run /id and /test_leads.
# ADMIN_USER_ID=123456789

# Where to send leads (group/channel/private chat id).
# Prefer LEADS_CHAT_ID. MANAGER_CHAT_ID is kept for backward compatibility.
LEADS_CHAT_ID=-1001234567890
# MANAGER_CHAT_ID=-1001234567890

# Storage
SQLITE_PATH=./data/bot.sqlite3

# Behavior
LLM_MODE=off             # off | on
ENABLE_VOICE=0           # 0 | 1
REMINDER_MINUTES=15      # 0 to disable

# OpenAI (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TRANSCRIBE_MODEL=gpt-4o-mini-transcribe
